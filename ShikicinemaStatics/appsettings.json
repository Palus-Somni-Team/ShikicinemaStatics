{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "System": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ShikicinemaStatics": {
    "PhysicalPath": "statics",
    "RequestPath": "/images/anime"
  },
  "Shikimori": {
    "Host": "https://shikimori.one"
  },
  "PostersLoader": {
    "Enabled": true,
    "QueriesInterval": "00:00:02",
    "ScanInterval": "02:00:00"
  },
  "Kestrel": {
    "Endpoints": {
      "http": {
        "Url": "http://127.0.0.1:8080"
      },
      "https": {
        "Url": "https://127.0.0.1:8081"
      }
    }
  }
}
